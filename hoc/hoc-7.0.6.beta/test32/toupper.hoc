### -*-hoc-*-
### ====================================================================
### Test the toupper() function.
### [20-Dec-2001]
### ====================================================================
abc = "abcdefghijklmnopqrstuvwxyz"
ABC = "ABCDEFGHIJKLMNOPQRSTUVWXYZ"
for (k = 1; k <= 26; ++k) \
{
	for (m = 1; m <= (26 + 1 - k); ++m) \
	{
		__TEST__ = "toupper(substr(\"" abc "\"," k "," m ")) == substr(\"" ABC "\"," k "," m ")"
		__assert   (toupper(substr(abc,k,m)) == substr(ABC,k,m))
	}
}
