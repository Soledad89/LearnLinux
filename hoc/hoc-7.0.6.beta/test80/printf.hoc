printf "This is a test of printf format items matching the regular expression\n"
printf "\t%%[-+0 ]?[0-9]*([.][0-9]*)?[deEfgGiosuxX]\n\n"

printf "------------------------------------------------------------------------\n"
for (k = 0; k <= 3; ++k ) printf "%d\t%i\t%u\t%o\t%x\t%X\n",k,k,k,k,k,k

printf "------------------------------------------------------------------------\n"
for (k = 1; k <= 2^20; k *= 16) printf "%07d\t%07i\t%07u\t%07o\t%07x\t%07X\n",k,k,k,k,k,k

printf "------------------------------------------------------------------------\n"
for (k = 0; k <= 3; ++k ) printf "%7d\t%7i\t%7u\t%7o\t%7x\t%7X\n",k,k,k,k,k,k

printf "------------------------------------------------------------------------\n"
for (k = 0; k <= 3; ++k ) printf "%-7d\t%-7i\t%-7u\t%-7o\t%-7x\t%-7X\n",k,k,k,k,k,k

printf "------------------------------------------------------------------------\n"
for (k = 1; k <= 1024; k *= 2) printf "%7d\t%7i\t%7u\t%7o\t%7x\t%7X\n",k,k,k,k,k,k

printf "------------------------------------------------------------------------\n"
for (k = -5; k <= 5; ++k) printf "%d*PI = %8.5f\n", k, k*PI

printf "------------------------------------------------------------------------\n"
for (k = 0; k <= 75; k += 5) printf "PI^%03d = %16.4E\n", k, PI^k

printf "------------------------------------------------------------------------\n"
for (k = 0; k <= 75; k += 5) printf "PI^%03d = %16.4e\n", k, PI^k

printf "------------------------------------------------------------------------\n"

for (k = 0; k <= 75; k += 5) printf "PI^%03d = %16.5G\n", k, PI^k
printf "------------------------------------------------------------------------\n"

for (k = 0; k <= 75; k += 5) printf "PI^%03d = %16.5g\n", k, PI^k
printf "------------------------------------------------------------------------\n"

printf "This test should produce a format directive error report, and abort\n"
printf "further processing of this file.\n"
