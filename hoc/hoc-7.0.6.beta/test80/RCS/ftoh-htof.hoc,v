@### -*-hoc-*-
### ====================================================================
### Test that ftoh() and htof() are inverse functions.
### [28-Jul-2002]
### ====================================================================

for (x = MINSUBNORMAL; x <= MAXNORMAL; x *= 256) \
{
	__TEST__ = "htof(ftoh(" x ")) == " x
	__assert   (htof(ftoh(x)) == x)
}

for (x = MINSUBNORMAL; x <= MAXNORMAL; x *= 256) \
{
	y = rand() * x
	__TEST__ = "htof(ftoh(" y ")) == " y
	__assert   (htof(ftoh(y)) == y)
}
@
