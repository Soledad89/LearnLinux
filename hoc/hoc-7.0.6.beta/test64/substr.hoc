### -*-hoc-*-
### ====================================================================
### Test the substr() function.
### [20-Dec-2001]
### ====================================================================

abc = "abcdefghijklmnopqrstuvwxyz"
for (k = 1; k <= 26; ++k) \
{
	for (m = 1; m <= (26 + 1 - k); ++m) \
	{
		__TEST__ = "length(substr(\"" abc "\"," k "," m ")) == " m
		__assert   (length(substr(abc,k,m)) == m)
	}
}
